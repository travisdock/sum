= form_for @tag do |f|
  - if @tag.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tag.errors.count, "error")} prohibited this tag from being saved:"
      %ul
        - @tag.errors.full_messages.each do |message|
          %li= message
  .field.mb-3
    = f.label :name
    = f.text_field :name, class: 'form-control'
  .actions
    = f.submit 'Save'
