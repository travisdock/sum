%h1 Recurring Entries

%a.btn.btn-primary{ href: new_recurrable_path }
  %i.bi.bi-plus-circle-fill
  New Recurring Entry

%div.data-table-wrapper{ 'data-controller' => 'data-table' }
%table.table.hover.no-sum
  %thead
    %tr
      %th Name
      %th Amount
      %th Category
      %th Day of Month

  %tbody
    - if @recurrables.any?
      - @recurrables.each do |recurrable|
        %tr.clickable-row{ 'data-href' => recurrable_path(recurrable) }
          %td= recurrable.name
          %td= recurrable.amount
          %td= recurrable.category.name
          %td= recurrable.day_of_month
    - else
      %tr
        %td
          No recurring entries found.
        %td
        %td
        %td

