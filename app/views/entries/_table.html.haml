#entries
  %table.table.hover
    %thead
      %tr
        %th{scope: "col"}
          = sort_link @q, :date, {}, { data: { turbo_frame: 'search', turbo_prefetch: false } }
        %th{scope: "col"}
          = sort_link @q, :amount, {}, { data: { turbo_frame: 'search', turbo_prefetch: false } }
        %th{scope: "col"}
          = sort_link @q, :category_name, {}, { data: { turbo_frame: 'search', turbo_prefetch: false } }
        %th{scope: "col"} Notes
    %tbody
      - @entries.each do |entry|
        %tr.clickable-row{ data: { href: entry_path(entry) } }
          %td= entry.date
          %td= entry.amount
          %td= entry.category.name
          %td= entry.notes
